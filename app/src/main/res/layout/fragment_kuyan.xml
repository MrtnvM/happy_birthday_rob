<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/graffiti_city_2"
    tools:context=".ui.KuyanFragment">


    <ImageView
        android:id="@+id/rob"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:contentDescription="@string/rob"
        android:scaleType="centerCrop"
        android:alpha="0"
        android:src="@drawable/rob" />


    <ImageView
        android:id="@+id/glasses"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="0dp"
        android:alpha="0"
        android:src="@drawable/glasses" />

    <TextView
        android:id="@+id/big_russian_rob"
        fontPath="fonts/title.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/rob"
        android:gravity="center"
        android:text="@string/russian_big_rob"
        android:textColor="@android:color/black"
        android:alpha="0"
        android:layout_marginTop="40dp"
        android:textSize="30sp" />

</RelativeLayout>
